{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" breadcrumb }}
  </div>
</div>

<div class="container columns columns--sidebar">
  <div class="columns--sidebar__sidebar" role="complementary" data-decorator="add-mobile-foldability" id="toggleable-1">
    <div data-decorator="init-fixedbottom-button">

      <h2 class="sidebar__header">Verfijn</h2>
      <div class="row">
        <p>
          <a href="#" class="icon icon--refresh">Herstel alle filters</a>
        </p>
      </div>

      <div class="form__row form__row--large">
        <h3 class="sidebar__subheader">Geselecteerde filters (7)</h3>
        <div data-decorator="showmoreless" data-config='{"amount": 2}'>
          <ul class="list list--unstyled">
            <li>
              <div class="form__selectedfilter">Zoekterm "Delft"
                <a href="{{url}}" class="form__selectedfilter__remove">
                  <span class="visually-hidden">verwijder</span>
                </a>
              </div>
            </li>
            <li>
              <div class="form__selectedfilter">Waarde 2
                <a href="{{url}}" class="form__selectedfilter__remove">
                  <span class="visually-hidden">verwijder</span>
                </a>
              </div>
            </li>
            <li>
              <div class="form__selectedfilter">Waarde 3
                <a href="{{url}}" class="form__selectedfilter__remove">
                  <span class="visually-hidden">verwijder</span>
                </a>
              </div>
            </li>
            <li>
              <div class="form__selectedfilter">Waarde 4
                <a href="{{url}}" class="form__selectedfilter__remove">
                  <span class="visually-hidden">verwijder</span>
                </a>
              </div>
            </li>
            <li>
              <div class="form__selectedfilter">Waarde 5
                <a href="{{url}}" class="form__selectedfilter__remove">
                  <span class="visually-hidden">verwijder</span>
                </a>
              </div>
            </li>
            <li>
              <div class="form__selectedfilter">Waarde 6
                <a href="{{url}}" class="form__selectedfilter__remove">
                  <span class="visually-hidden">verwijder</span>
                </a>
              </div>
            </li>
            <li>
              <div class="form__selectedfilter">Waarde 7
                <a href="{{url}}" class="form__selectedfilter__remove">
                  <span class="visually-hidden">verwijder</span>
                </a>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <h2 class="visually-hidden">Filters</h2>

      <form id="formid">

        <div class="form__row form__row--large">
          <fieldset>
            <legend>Zoekterm(en)</legend>
            <div class="form__row">
               {{render "@input-inputsubmit" inputsubmitContext }}
            </div>
          </fieldset>
        </div>

        <div class="form__row form__row--large">
          <fieldset>
            <legend>Classificatie</legend>
            <div class="form__row">
              {{ render "@input-checkbox" checkboxClassificatie }}
            </div>
          </fieldset>
        </div>

        <div class="form__row form__row--large">
          <fieldset>
            <legend>Type</legend>
            <div class="form__row">
              <div class="" data-decorator="init-formreset">
                <p>
                  <a href="#" class="icon icon--refresh formreset-resetlink">Reset keuze</a>
                </p>
                {{ render "@input-radio" radioType }}
              </div>
            </div>
          </fieldset>
        </div>
        <div class="form__row form__row--large">
          <fieldset>
            <legend>Organisatie</legend>
            <div class="form__row">
              {{ render "@subselection" subOrganisatie }}
            </div>
          </fieldset>
        </div>
        <div class="form__row form__row--large">
          <fieldset>
            <legend>Wettelijke Grondslag WNT</legend>
            <div class="form__row">
              {{ render "@subselection" subGrondslag }}
            </div>
          </fieldset>
        </div>
        <div class="form__row form__row--large">
          <fieldset>
            <legend>Beleidsterrein</legend>
            <div class="form__row">
              {{ render "@subselection" subBeleidsterrein }}
            </div>
          </fieldset>
        </div>

        {{!-- <div class="form__row form__row--large">
          <fieldset>
            <legend>Documentsoort en gedetailleerde gegevens</legend>
            <div class="form__row">
              {{ render "@checkbox-selectall" checkboxDocumentsoort }}
            </div>
          </fieldset>
        </div> --}}


        <button type="submit" class="js-fixedbottom-button__button fixedbottom-button__button button button--primary" hidden data-decorator="init-sticky"
          data-config='{"position":"bottom"}'>Zoek opnieuw</button>
      </form>

    </div>
  </div>
  <div id="content" role="main">

    {{ render "@sort" sortContext }}

    <h1>Zoekresultaten
      <span class="h1__sub">1-10 van de 7396 resultaten</span>
    </h1>

    {{render "@resultlist" resultsContext }}

    <div id="modal-1" class="modal modal--wide modal--off-screen" hidden role="alert">
      <div class="modal__inner">
        <div class="modal__content">
          <div class="row row--large">
            {{render "@map" mapContext }}
            <script id="config1" type="application/json">
              {
                "debug":false,
                "options": {
                  "location_types": ["provincie", "gemeente", "adres", "punt", "lijn"],
                  "class": "kaartprikmodule-overlay",
                  "mode": "geoview",
                  "center": {
                    "highlight": true,
                    "type": "location",
                    "location": {
                      "type": "gemeente",
                      "title": "Gemeente Delft"
                    }
                  },
                  "controls": ["zoom"],
                  "layers": {
                    "bgtachtergrondkaart": {
                      "enabled": true
                    }
                  }
                }
              }
            </script>
          </div>
          <h2>Gemeente Delft</h2>
          <address>
             <p>Gemeente Delft, Stationsplein 1, 2611 BV DELFT
            </p>
          </address>
          <p>
            <a href="#" class="button button--primary">Bekijk details</a>
          </p>
        </div>
        <button type="button" data-handler="close-modal" class="modal__close">
          <span class="visually-hidden">Sluiten</span>
        </button>
      </div>
    </div>
    <div id="modal-2" class="modal modal--wide modal--off-screen" hidden role="alert">
      <div class="modal__inner">
        <div class="modal__content">
          <div class="row row--large">
            {{render "@map" mapContext2 }}
            <script id="config2" type="application/json">
              {
                "debug":false,
                "locations": [
                  {
                    "type": "punt",
                    "geometry": "POINT(83388.72001447542 454483.4858568841)",
                    "geometry_type": "WKT",
                    "title": "Punt 1",
                    "url": "https://google.com"
                  }
                ],
                "options": {
                  "location_types": ["provincie", "gemeente", "adres", "punt", "lijn"],
                  "mode": "geoview",
                  "controls": ["zoom"],
                  "layers": {
                    "bgtachtergrondkaart": {
                      "enabled": true
                    }
                  }
                }
              }
            </script>
          </div>
          <h2>Stichting IHE Delft Institute for Water Education</h2>
          <address>
            <p>Stichting IHE Delft Institute for Water Education, Westvest 7, 2611 AX Delft
            </p>
          </address>
          <p>
            <a href="#" class="button button--primary">Bekijk details</a>
          </p>
        </div>
        <button type="button" data-handler="close-modal" class="modal__close">
          <span class="visually-hidden">Sluiten</span>
        </button>
      </div>
    </div>

    {{render "@pagination" }}

  </div>
</div>

{{ render "@footer" }}
