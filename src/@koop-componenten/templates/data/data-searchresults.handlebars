{{ render "@header" headerContext merge="true" }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" }}
  </div>
</div>
<div class="row container columns columns--sidebar-left">
	<div>
		<h1>2957 zoekresultaten</h1>
		{{ render "@pagination" }}
		{{ render "@sort" }}
		{{ render "@resultlist--data" }}
		{{ render "@pagination" }}
	</div>
	<div>
		<div class="well">
	      <form>
	        <fieldset class="form__element">
	          <legend class="form--intro">Zoeken</legend>
	          <div class="">
	            <label for="zoekterm" class="visually-hidden">Zoeken op</label>
	            <input type="text" id="zoekterm" placeholder="Bv. verkiezingsuitslag 2018">
	          </div>
	        </fieldset>
	        <button type="submit" class="button button--primary">Zoek open data</button>
	      </form>
	    </div>

	    <h2>Status</h2>
	    {{ render "@facet" }}

	    <h2>Toegang</h2>
	    {{ render "@facet" localAccessFacets }}

	    <h2>Data-eigenaar</h2>
	    {{ render "@facet" localFacets }}
	</div>
</div>

{{ render "@footer" }}
