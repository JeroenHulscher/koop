{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" breadcrumb }}
  </div>
</div>


<div id="content" role="main" class="container container--centered">
  <div class="row row--spacer u-margin-top-40">
    <div class="columns columns--gutter-med">
      <div class="column">
        <div class="form__row form__row--large">
          {{ render "@heading--preheader" preheader merge=true }}
          <h1 class="h1 h1--slim">Activeer uw account</h1>
          <p>
            U dient uw account te activeren voordat u van uw account gebruik kunt maken. Wij hebben een activatiecode naar het door u opgegeven e-mailadres gestuurd.
          </p>
        </div>
        {{ render "@alert--success" alert merge=true }}
        <form class="form" data-decorator="init-form-validation">
          <fieldset>
            <legend class="visually-hidden">Activeer uw account</legend>
            <div class="form__row">
              {{render "@input-text" inputEmailContext }}
            </div>
            <div class="form__row">
              {{render "@input-text" inputCodeContext }}
            </div>
            <div class="form__rowsubmit">
              <div class="form__rowsubmit__item">
                {{ render "@button" buttonSubmit }}
              </div>
              <div class="form__rowsubmit__item">
                {{render "@link--mail" linkNewcode merge=true }}<br/>
                {{render "@link--profiel" linkAccount merge=true }}
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="column">
      </div>
    </div>
  </div>
</div>

{{ render "@disclaimer" }}
{{ render "@footer" }}
