{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" breadcrumb }}
  </div>
</div>

<div id="content" role="main" class="container container--centered">

  <div class="row row--spacer u-margin-top-40">
    {{ render "@link--terug-naar" linkBack merge=true }}
    <div class="columns columns--gutter-med">
      <div class="column">
        <div class="form__row form__row--large">
          {{ render "@heading--preheader" preheader merge=true }}
          <h1 class="h1 h1--slim">E-mailadres wijzigen</h1>
          <p>
             U kunt hier het e-mailadres van uw account wijzigen. U krijgt op uw nieuwe e-mailadres een bevestigingscode toegestuurd
            om uw wijziging te bevestigen. Na bevestiging sturen wij attenderingen voortaan naar uw nieuwe e-mailadres.
          </p>
        </div>
        {{ render "@alert--warning" alertWarning merge=true }}
        <form class="form" data-decorator="init-form-validation">
          <fieldset>
            <legend class="visually-hidden">E-mailadres wijzigen</legend>
            <div class="form__row">
                {{render "@input-text--email" oldEmailInput merge=true }}
            </div>
            <div class="form__row">
                {{render "@input-text--email" newEmailInput merge=true }}
            </div>
            <div class="form__row">
              {{render "@input-text--password" PWInput merge=true }}
            </div>
            <div class="form__rowsubmit">
              <div class="form__rowsubmit__item">
                {{ render "@button" buttonSubmit }}
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="column"></div>
    </div>

  </div>

</div>

{{ render "@disclaimer" }}
{{ render "@footer" }}
