{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" }}
  </div>
</div>

<div class="container row">
  <div class="columns columns--sidebar-left">
    <div class="column">



      <div class="row columns">
        <div class="column">
          <h1>Zoekresultaten <span class="h1__sub">1-10 van de 105 resultaten</span></h1>
        </div>
        <div class="column align-right hidden-mobile">
          {{render "@buttonswitch" buttonswitchContext }}
        </div>
      </div>

      <div class="row hidden-desktop">
        <address>
          Gouwestraat 26
          <br> 3522 CJ Utrecht
          <br> Afstand: 250 meter
        </address>
        <p>
          <a href="#" data-decorator="init-modal" data-handler="open-modal" data-modal="modal-1">Wijzigen</a>&nbsp;
          <a href="#" data-decorator="init-modal" data-handler="open-modal" data-modal="modal-2">Bewaar deze zoekopdracht</a>
        </p>

      </div>


      <div class="row hidden-desktop align-right">
        <button class="button button--primary button--icon-filter block-element" data-decorator="init-modalsidebar" data-handler="open-modalsidebar"
          data-modal="modal-filter">Filter opties</button>
      </div>
      <div class="row hidden-desktop">
        <div class="align-right">
          {{render "@buttonswitch" buttonswitchContext }}
        </div>
      </div>



      <div class="row">
        {{render "@map" mapContext }}
        <script id="config1" type="application/json">
          {
            "debug":false,
            "locations":[
              {
                "type":"punt",
                "geometry":"POINT(83388.72001447542 454483.4858568841)",
                "geometry_type":"WKT","title":"Punt 1",
                "url":"https://google.com"
              },
              {
                "type":"punt",
                "geometry":"POINT(83388.72001447542 454483.4858568841)",
                "geometry_type":"WKT","title":"Punt 2",
                "omschrijving":"Nunc sed turpis ac lorem molestie sagittis vel vel ligula. Maecenas elementum lobortis pretium. Mauris ullamcorper tortor at dolor imperdiet, scelerisque convallis nisl fringilla.",
                "url":"https://google.com"
              }
              ]
            ,
            "options": {
              "location_types": ["provincie", "gemeente", "adres", "punt", "lijn"],
              "class": "kaartprikmodule-overlay",
              "mode": "geoview",
              "center": {
                "highlight": true,
                "type": "circle",
                "circle": {
                  "radius": 500,
                  "x": 83388,
                  "y": 454483
                }
              },
              "controls": ["base-layer", "center", "fullscreen", "zoom"],
              "layers": {
                "bgtachtergrondkaart": {
                  "enabled": true
                }
              }
            }
          }

        </script>

      </div>

      <div class="row row--spacer">
        {{#> @jumbotron jumbotron2Context }}
          <form class="form" data-decorator="init-form-validation">
            <fieldset>
              <legend class="visually-hidden">Meld je aan voor de emailservice</legend>
              <div class="form__row">
                {{ render "@input-inputsubmit" }}
              </div>
            </fieldset>
          </form>
        {{/@jumbotron}}
      </div>

    </div>
    <div class="column column--sidebar">

      <div id="modal-filter" class="modal-sidebar" role="alert" data-decorator="init-fixedbottom-button">

        <div class="modal-sidebar__content" >


          <div class="row--spacer">
            <h2>Zoekfilter</h2>
            <address>
              Gouwestraat 26<br>
              3522 CJ Utrecht<br>
              Afstand: 250 meter
            </address>
            <ul class="list list--inline">
              <li><a href="#" data-decorator="init-modal" data-handler="open-modal" data-modal="modal-4">Wijzigen</a></li>
              <li><a href="#" data-decorator="init-modal" data-handler="open-modal" data-modal="modal-5">Bewaar deze zoekopdracht</a></li>
            </ul>

            <div id="modal-4" class="modal modal--wide modal--off-screen" hidden role="alert">
              <div class="modal__inner">
                <div class="modal__content">

                  {{#> @jumbotron jumbotronChangeContext }}

                    <form class="form" data-decorator="init-form-validation">
                      <fieldset>
                        <legend class="visually-hidden">Zoek berichten</legend>
                        <div class="form__row ">
                          <div class="columns">
                            <div class="form__row form__row--medium">
                              {{render "@input-text" postcodeContext }}
                            </div>
                            <div class="form__row form__row--medium">
                              {{render "@input-text" huisnrContext }}
                            </div>
                            <div class="form__row form__row--medium">
                              {{ render "@select-custom--with-label" selectContext merge=true }}
                            </div>
                          </div>
                        </div>
                        <div class="form__row align-right">
                          <button type="submit" class="form__button button button--primary button--large">Zoek opnieuw</button>
                        </div>
                      </fieldset>
                    </form>

                  {{/@jumbotron}}

                </div>

                <button type="button" data-handler="close-modal" class="modal__close">
                  <span class="visually-hidden">Sluiten</span>
                </button>

              </div>
            </div>

            <div id="modal-5" class="modal modal--wide modal--off-screen" hidden role="alert">
              <div class="modal__inner">
                <div class="modal__content">
                   {{#> @jumbotron jumbotronSaveContext }}
                    <form class="form" data-decorator="init-form-validation">
                      <fieldset>
                        <legend class="visually-hidden">Meld je aan voor de emailservice</legend>
                        <div class="form__row">
                          {{ render "@input-inputsubmit" inputsubmitSearchSaveContext }}
                        </div>
                      </fieldset>
                    </form>
                  {{/@jumbotron}}
                </div>
                <button type="button" data-handler="close-modal" class="modal__close">
                  <span class="visually-hidden">Sluiten</span>
                </button>
              </div>
            </div>

          </div>

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Zoekwoord(en)</legend>
              {{render "@input-inputsubmit" inputsubmitContext }}
            </fieldset>
          </div>

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Gebied {{render "@tooltip" tt1 }}
              </legend>
              {{render "@input-radio" gebiedContext }}
            </fieldset>
          </div>

          <div data-decorator="init-form-conditionals">


            <div id="citem-0" class="form__row form__row--large js-form-conditionals__citem">
              <fieldset>
                <legend>Publicatiedatum
                {{render "@tooltip" tt2}}
                </legend>
                {{render "@input-radio" publicatiedatumContext }}
              </fieldset>
            </div>

            <div id="citem-1" class="form__row form__row--large js-form-conditionals__citem u-margin-top--24">
              {{render "@datepicker" publicatieCustomRange merge=true }}
            </div>

          </div>

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Onderwerpen {{render "@tooltip" tt3}}</legend>
              {{render "@input-checkbox" onderwerpContext }}
            </fieldset>
          </div>

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Voorlichting {{render "@tooltip" tt4}}</legend>
              {{render "@input-checkbox" voorlichtingContext }}
            </fieldset>
          </div>

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Bestemming {{render "@tooltip" tt5}}</legend>
              {{render "@input-checkbox" bestemmingContext }}
            </fieldset>
          </div>

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Voorschriften {{render "@tooltip" tt6}}</legend>
              {{render "@input-checkbox" voorschriftenContext }}
            </fieldset>
          </div>

          <a href="#" class="js-fixedbottom-button__button modal-sidebar__submit button button--primary" hidden data-decorator="init-sticky" data-config='{"position":"bottom"}'>Opnieuw zoeken</a>

        </div>




        <button type="button" data-handler="close-modalsidebar" class="modal-sidebar__close">
          <span class="visually-hidden">Sluiten</span>
        </button>

      </div>

    </div>
  </div>
</div>

{{ render "@footer" }}
