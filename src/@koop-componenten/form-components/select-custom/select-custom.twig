<div{% if id %} id="select--{{ id }}"{% endif %} class="select-custom {{ modifier }}">
  <select{{ attributes }}>
    {% for option in options %}
      {% if option.type == 'optgroup' %}
        <optgroup label="{{ option.label }}">
          {% for sub_option in option.options %}
            <option value="{{ sub_option.value }}"{% if linkedto %} data-linkedto="{{ linkedto }}"{% endif %}{{ sub_option.selected ? ' selected="selected"' }}>{{ sub_option.label }}</option>
          {% endfor %}
        </optgroup>
      {% elseif option.value or option.label %}
        <option value="{{ option.value }}"{% if linkedto %} data-linkedto="{{ linkedto }}"{% endif %}{{ option.selected ? ' selected="selected"' }}>{{ option.label }}</option>
      {% endif %}
    {% endfor %}
  </select>
</div>
