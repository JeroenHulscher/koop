<header class="header">

  <div class="header__start">
    <div class="container">
      {% if skipLinks %}
      <div class="skiplinks">
        {% for skipLinks_i in skipLinks %}
        <a href="{{ skipLinks_i.url }}">{{ skipLinks_i.text }}</a>
        {% endfor %}
      </div>
      {% endif %}

      {% if nav %}
        <button type="button" class="hidden-desktop button button--icon-hamburger" data-handler="toggle-nav" aria-controls="nav" aria-expanded="false">{{ hamburgerButtonText }}</button>
      {% endif %}
      {% include "@logo" %}


      {% if metaLinks %}
      <div class="header__meta">
        {% for metaLinks_i in metaLinks %}
        <a href="{{ metaLinks_i.url }}" class="">{{ metaLinks_i.text }}</a>
        {% endfor %}
      </div>
      {% endif %}
      {% if language %}
      <div class="header__meta">
        <a href="#" class="link-iconed link-iconed--publication">English</a>
      </div>
      {% endif %}
    </div>
  </div>
  {% if nav %}
  <nav class="header__nav header__nav--closed" id="nav">
    <h2 class="visually-hidden">Primaire navigatie</h2>
    <div class="container">
      <ul class="header__primary-nav list list--unstyled">
        <li class="hidden-mobile"><a href="#other-sites" data-handler="toggle-other-sites" data-decorator="init-toggle-other-sites"><span class="visually-hidden">Andere sites binnen </span>Overheid.nl</a></li>
        {% if navLinks %}
        {% for navLinks_i in navLinks %}
          {% if navLinks_i.modifier %}
            <li><a class="button {{ navLinks_i.modifier }}" href="{{ navLinks_i.action }}" role="button">{{ navLinks_i.text }}</a></li>
          {% else %}
            <li><a href="{{ navLinks_i.url }}" class="{{ navLinks_i.className }}">{{ navLinks_i.text }}</a></li>
          {% endif %}
        {% endfor %}
        {% endif %}
      </ul>
      {% if headerMore %}
      <a href="#other-sites" class="hidden-desktop" data-handler="toggle-other-sites" data-decorator="init-toggle-other-sites"><span class="visually-hidden">Andere sites binnen </span>Overheid.nl</a>
      {% endif %}
    </div>
  </nav>
  {% endif %}
</header>
{% if nav %}
  {% if headerMore %}
  <div class="header__more" id="other-sites">
    <div class="container columns">
      {% for headerMore_i in headerMore %}
      <div>
        <h2>{{ headerMore_i.title }}</h2>
        <p>{{ headerMore_i.description }}</p>
        {% if headerMore_i.links %}
        <ul class="list list--linked">
          {% for links_i in headerMore_i.links %}
          <li><a href="{{ links_i.url }}">{{ links_i.text }}</a></li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}
{% endif %}
