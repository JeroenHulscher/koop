<div class="sort {{ modifier }}">
  <div class="columns">
    <div class="column {{#if columns}}column-d-8{{/if}}">
      {{#if options}}
      Sorteer op:
      <ul class="sort__options">
        {{#each options}}
          <li>
            <a {{#if id}}id="{{id}}"{{/if}} href="{{href}}" role="button" class="{{#if singleSort}}{{else}}{{#if sortDescending}}sort--descending{{else}}sort--ascending{{/if}}{{/if}} {{active}}" aria-pressed="{{#if active}}true{{else}}false{{/if}}"><span class="visually-hidden">Sorteer op: </span>{{label}}</a>
          </li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
    {{#if columns}}
      <div class="column column-d-4 d-align-right">
      {{#if buttonDownload}}
        <a {{#if id}}id="{{id}}"{{/if}} href="#" class="icon icon--download">Download</a>
      {{/if}}
      {{#if amountPerPageFilter}}
          Aantal:
          <ul class="sort__options">
            <li>
              <a {{#if id}}id="{{id}}"{{/if}} href="{{href}}" class="is-active" role="button" aria-pressed="true"><span class="visually-hidden">Toon </span>10<span class="visually-hidden"> resultaten per pagina</span></a>
            </li>
            <li>
              <a {{#if id}}id="{{id}}"{{/if}} href="{{href}}" class="" role="button" aria-pressed="false"><span class="visually-hidden">Toon </span>20<span class="visually-hidden"> resultaten per pagina</span></a>
            </li>
            <li>
              <a {{#if id}}id="{{id}}"{{/if}} href="{{href}}" class=""  role="button" aria-pressed="false"><span class="visually-hidden">Toon </span>50<span class="visually-hidden"> resultaten per pagina</span></a>
            </li>
          </ul>

      {{/if}}
      </div>
    {{/if}}
  </div>
</div>
