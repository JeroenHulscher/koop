<p><button type="button" data-handler="open-modal" data-modal="modal-1" class="button">{{ openButton }}</button></p>
<div id="modal-1" class="modal {{#if initClosed }}modal--off-screen{{/if}}" {{#if initClosed }}hidden{{/if}} role="alert">
  <div class="modal__inner">
    <div class="modal__content">
      {{#if text}}
        {{{ text }}}
      {{else}}
        {{#> @partial-block}}
          {{content}}
        {{/ @partial-block}}
      {{/if}}
    </div>
    <button type="button" data-handler="close-modal" class="modal__close">
      <span class="visually-hidden">{{ closeButton }}</span>
    </button>
  </div>
</div>
