<div class="topbar">
  <div class="container">
    {{#if navItems}}
    <nav aria-label="Domein navigatie" class="topbar__nav">
      <ul>
        {{#each navItems}}
        <li>
          <a href="{{href}}" {{#if active}}class="is-active"{{/if}}>{{label}}</a>
        </li>
        {{/each}}
      </ul>
    </nav>
    {{/if}}
    {{#if flyoutbar}}
      {{ render "@flyoutbar" flyoutbar merge=true }}
    {{/if}}
  </div>
</div>
