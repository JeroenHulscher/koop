{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" breadcrumbAttenderen merge=true }}
  </div>
</div>

<div class="container" role="main" id="content">

  <div class="row row--spacer">

    {{#> @jumbotron jumbotronContext }}
    <form class="form" data-decorator="init-form-validation">
      <fieldset>
        <legend class="visually-hidden">E-mailadres</legend>
        <div class="columns">
          <div class="column">
            <div class="form__row">
              {{render "@input-text" inputPostcodeContext }}
            </div>
          </div>
          <div class="column">
            <div class="form__row">
              {{render "@input-text" inputHuisnummerContext }}
            </div>
          </div>
        </div>
        <div class="form__rowsubmit">
          <div class="form__rowsubmit__item">
            {{ render "@button" buttonSubmit }}
          </div>
        </div>
      </fieldset>

    </form>
    {{/@jumbotron}}

  </div>

  <div class="container container--centered">

    <form class="form" data-decorator="init-form-validation">
      <fieldset>
        <legend class="visually-hidden">Voorkeuren</legend>


        <div class="row">
          <ul class="list list--stepcontainer">
            <li class="list__item">
              <div class="columns">
                <div class="column">
                  <h2>Selecteer een gebied</h2>
                  <h3 class="h4 u-nomargin">Uw adres</h3>
                  <p>Wilhelmina van Prijsenweg 52, 2595 AN Den Haag</p>
                  <h3 class="h4 u-nomargin">Straal</h3>
                  <p>Kies voor een straal rondom uw woning of voor meldingen uit uw gemeente</p>
                  <div class="form">
                    <div class="form__row">
                      {{render "@input-radio" straalContext }}
                    </div>
                  </div>
                </div>
                <div class="column">
                  {{render "@map" mapContext }}

                  <script id="config1" type="application/json">
                  {
                    "locations": [
                      {
