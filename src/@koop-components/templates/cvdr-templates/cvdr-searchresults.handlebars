{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" }}
  </div>
</div>

  <div class="container columns columns--sidebar">
    <div class="columns--sidebar__sidebar" data-decorator="add-mobile-foldability" id="toggleable-1">
      <div data-decorator="init-fixedbottom-button">

        <h2>Zoekfilter</h2>
        <div class="row">
          <p>
            <a href="#" class="icon icon--refresh">Herstel alle filters</a>
          </p>
        </div>


        <div class="form__row form__row--large">
          <h4>Geselecteerde filters (7)</h4>
          <div data-decorator="showmoreless" data-config='{"amount": 2}'>
            <ul class="list list--unstyled">
              <li>
                <div class="form__selectedfilter">Waarde 1
                  <a href="{{url}}" class="form__selectedfilter__remove">
                    <span class="visually-hidden">verwijder</span>
                  </a>
                </div>
              </li>
              <li>
                <div class="form__selectedfilter">Waarde 2
                  <a href="{{url}}" class="form__selectedfilter__remove">
                    <span class="visually-hidden">verwijder</span>
                  </a>
                </div>
              </li>
              <li>
                <div class="form__selectedfilter">Waarde 3
                  <a href="{{url}}" class="form__selectedfilter__remove">
                    <span class="visually-hidden">verwijder</span>
                  </a>
                </div>
              </li>
              <li>
                <div class="form__selectedfilter">Waarde 4
                  <a href="{{url}}" class="form__selectedfilter__remove">
                    <span class="visually-hidden">verwijder</span>
                  </a>
                </div>
              </li>
              <li>
                <div class="form__selectedfilter">Waarde 5
                  <a href="{{url}}" class="form__selectedfilter__remove">
                    <span class="visually-hidden">verwijder</span>
                  </a>
                </div>
              </li>
              <li>
                <div class="form__selectedfilter">Waarde 6
                  <a href="{{url}}" class="form__selectedfilter__remove">
                    <span class="visually-hidden">verwijder</span>
                  </a>
                </div>
              </li>
              <li>
                <div class="form__selectedfilter">Waarde 7
                  <a href="{{url}}" class="form__selectedfilter__remove">
                    <span class="visually-hidden">verwijder</span>
                  </a>
                </div>
              </li>
            </ul>
          </div>
        </div>

        <form id="formid">

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Zoekwoord(en)</legend>
              {{render "@input-inputsubmit" inputsubmitContext }}
            </fieldset>
          </div>
          <div class="form__row form__row--large">
            <fieldset>
              <legend>Locatie</legend>
              <div class="form__row">
                {{ render "@input-text" postcodeInput }}
              </div>
            </fieldset>
          </div>
          <div class="form__row form__row--large">
            <fieldset>
              <legend>Woord of zinsdeel</legend>
              <div class="form__row">
                {{ render "@input-text" wordintitelInput }}
              </div>
              <div class="form__row">
                {{ render "@input-text" wordintextInput }}
              </div>
              <div class="form__row">
                {{ render "@input-text" wetgegevensInput }}
              </div>
            </fieldset>
          </div>
          <div class="form__row form__row--large">
            <fieldset>
              <legend>Geldigheid</legend>
              {{ render "@date-selection" dateselection merge=true }}
              <a href="#" class="reset">
                <small>Herstellen</small>
              </a>
            </fieldset>
          </div>
          <div class="form__row form__row--large">
            <fieldset>
              <legend>Organisaties</legend>
              <div class="form__row">
                <h3 class="form__sublegend">Gemeenten</h3>
                {{render "@subselection" subselectionGemContext }}
              </div>
              <div class="form__row">
                <h3 class="form__sublegend">Provincies</h3>
                {{render "@subselection" subselectionProContext }}
              </div>
              <div class="form__row">
                <h3 class="form__sublegend">Waterschappen</h3>
                {{render "@subselection" subselectionWatContext }}
              </div>
              <div class="form__row">
                <h3 class="form__sublegend">Regionale samenwerkingsorganen</h3>
                {{render "@subselection" subselectionRegContext }}
              </div>
            </fieldset>
          </div>
          <button type="submit" class="js-fixedbottom-button__button fixedbottom-button__button button button--primary" hidden data-decorator="init-sticky"
            data-config='{"position":"bottom"}'>Zoek opnieuw</button>
        </form>

      </div>
    </div>
    <div id="content" role="main">

      {{ render "@sort" sortContext }}

      <h1>Zoekresultaten
        <span class="h1__sub">1-10 van de 105 resultaten</span>
      </h1>

      {{render "@resultlist" resultsContext }} {{render "@pagination" }}

    </div>
  </div>


  </div>
</div>

</div>

{{ render "@footer" }}
