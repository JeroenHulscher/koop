{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" }}
  </div>
</div>

<div class="container row" id="content" role="main">
  <div class="row row--spacer">
    <div class="jumbotron jumbotron--highlight">

      <div class="jumbotron__content jumbotron__content--centered jumbotron__content--centered-medium">
        <div class="row">
          <p class="jumbotron__subheader">Tuchtrecht</p>
          <h1 class="jumbotron__header h2">Collectietitel</h1>
          <p class="jumbotron__intro">Doorzoek de complete collectie van algemeen verbindende voorschriften uitgegeven door decentrale overheden.</p>
        </div>

        <form class="form">
          <div class="form__row form__row--large">
            <fieldset>
              <legend class="visually-hidden">Doorzoek alle lokale wet- en regelgeving</legend>
              <div class="columns">
                <div class="column column-d-8">
                  <div class="form__row form__row--medium">
                    <label class="form__label form__label--accent" for="input543">Zoekwoord(en)</label>
                    <input type="text" id="input543" class="input-text input-text--searchmedium" placeholder="Vul hier uw zoekwoorden in" />
                  </div>
                </div>
                <div class="column column-d-4">
                  <div class="form__row form__row--medium">
                    {{ render "@input-group" zoekeninContext merge=true }}
                  </div>
                </div>
              </div>

            </fieldset>
          </div>
          <div class="form__row form__row--medium columns columns--dominant">
            <div class="column">
              <fieldset>
                <legend>Domein</legend>
                <div class="form__row form__row--medium">
                  <div class="form__row"><h3 class="form__label">Vrije beroepen</h3></div>
                   {{render "@input-radio" vrijeberoepenContext }}
                </div>
                <div class="form__row">
                  <div class="form__row">
                    <h3 class="form__label">Producenten</h3>
                  </div>
                  {{render "@input-radio" producentenContext }}
                </div>
              </fieldset>

            </div>
            <div class="column">

              <div class="form__row form__row--large">
                <fieldset>
                  <legend>Zoek op</legend>
                  <div class="form__row">
                    <label class="form__label">ECLI</label>
                    {{ render "@input-text" wordintextInput }}
                  </div>
                  <div class="form__row">
                    <label class="form__label">Zoeknummer</label>
                    {{ render "@input-text" wetgegevensInput }}
                  </div>
                </fieldset>
                <fieldset>
                  <legend>Zoek op datum</legend>
                  <div class="form__row">
                     {{ render "@input-group" datumvanContext merge=true }}
                  </div>
                  <div class="form__row">
                    <h3 class="form__label">Periode</h3>
                    <div class="columns" data-decorator="init-form-conditionals">
                      <div class="column column-d-5">
                        <div id="citem-1" class="js-form-conditionals__citem">
                          <div class="form__row">
                            {{ render "@select-custom" selectCustomContext }}
                          </div>
                        </div>
                      </div>
                      <div class="column column-d-7">
                        <div id="citem-2" class="js-form-conditionals__citem">
                          {{ render "@datepicker" opDatepicker }}
                        </div>
                        <div id="citem-3" class="js-form-conditionals__citem">
                          {{ render "@datepicker" totDatepicker }}
                        </div>
                        <div id="citem-4" class="js-form-conditionals__citem">
                          <div class="form__row">
                            <label for="" class="visually-hidden">Startdatum</label>
                            {{ render "@datepicker" vanDatepicker }}
                          </div>
                          <div class="form__row">
                            <label for="">en <span class="visually-hidde">einddatum</span>:</label>
                            {{ render "@datepicker" totDatepicker }}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </fieldset>
              </div>
            </div>

          </div>
          <div class="columns columns--vcenter">
            <div class="column">
              <a href="#" class="icon icon--refresh">Alle filters herstellen</a>
            </div>
            <div class="column align-right">
              <button type="submit" class="button button--primary">Zoeken</button>
            </div>
          </div>


        </form>
      </div>

    </div>
  </div>

</div>

{{ render "@footer" }}
