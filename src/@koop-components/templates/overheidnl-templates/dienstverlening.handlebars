  <div class="row row--page-opener">
    <div class="container">
      {{ render "@breadcrumb" }}
    </div>
  </div>

<div>

  <div class="row row--browse">
    <div class="container">

      <form class="document-search" action="/search/4" method="post">
        <fieldset>
          <legend class="h1">Zoeken</legend>
          <p>Zoek naar diensten van de overheid, zoals het aanvragen van een vergunning of paspoort.</p>

          <div class="document-search__fields">
            <label class="visually-hidden" for="postcode"></label>
            <input id="postcode" type="text" placeholder="Postcode (alleen 4 cijfers)" name="postcode" data-com.agilebits.onepassword.user-edited="yes">
            <label class="visually-hidden" for="zoekterm"></label>
            <input id="zoekterm" type="text" placeholder="Zoekterm" name="zoekterm">
            <input type="submit" value="Zoeken" class="button button--secondary">
          </div>
          <p>
            <a href="/producten_en_diensten">Uitgebreid zoeken</a>
          </p>
        </fieldset>
      </form>

    </div>
  </div>




