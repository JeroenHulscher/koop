{{ render "@skiplinks" skipLinks }}
{{ render "@topbar" topbar }}
{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" breadcrumb }}
  </div>
</div>

<div class="container columns columns--sticky-sidebar row">

  <div class="columns--sticky-sidebar__sidebar" data-decorator="stick-sidebar add-mobile-foldability" id="toggleable-1">
    <div>
      <p>
        <a href="/components/preview/templates-eb-homepage" class="icon--backlink">Terug naar Publicatie</a>
      </p>
    </div>
  </div>

  <div role="main" id="content">

    <h1>Bestanden wijzigen van Planologische Kernbeslissing Waddenzee</h1>

    <form>
      <fieldset>
        <legend class="visually-hidden">Bestanden wijzigen</legend>
        {{ render "@table" table }}
        {{#> @modal modalContextMetadata }}
          <fieldset>
            <legend>Metadata toevoegen</legend>
            <div class="columns">
              <div class="column">
                <div class="form__row">
                  {{ render "@select-custom" selectcustom }}
                </div>
              </div>
              <div class="column">
                <div class="form__row">
                  {{render "@input-text" inputfile merge=true }}
                </div>
              </div>
            </div>
            <div class="form__rowsubmit">
              <div class="form__rowsubmit__item">
                {{render "@button" buttonSubmitMetadata }}
              </div>
            </div>
          </fieldset>
        {{/@modal}}
      </fieldset>
    </form>

  </div>

</div>

{{ render "@footer" }}
