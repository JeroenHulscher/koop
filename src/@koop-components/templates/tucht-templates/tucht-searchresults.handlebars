{{ render "@header" header merge=true }}
<div class="row row--page-opener">
  <div class="container">
    {{ render "@breadcrumb" }}
  </div>
</div>

<div class="container row">
  <div class="columns columns--sidebar-left">
    <div class="column">

      <div class="row row--spacer hidden-mobile">
        <div class="columns">
          <div class="column column-d-7">
            {{render "@input-inputsubmit" inputsubmitContext }}
          </div>
        </div>
        <div class="">
          {{ render "@sort" sortContext }}
        </div>
      </div>

      <h1 class="h1 h1--slim">Zoekresultaten
        <span class="h1__sub">1-10 van de 105 resultaten</span>
      </h1>

      <div class="hidden-desktop align-right">
        <button class="button button--primary block-element button--icon-filter" data-decorator="init-modalsidebar" data-handler="open-modalsidebar"
          data-modal="modal-filter">Filter opties</button>
      </div>

  <div class="hidden-desktop">
     {{ render "@sort" sortContext }}
  </div>

  {{render "@resultlist" resultsContext }} {{render "@pagination" }}

    </div>
    <div class="column column--sidebar">

      <div id="modal-filter" class="modal-sidebar" role="alert" data-decorator="init-fixedbottom-button">

        <div class="modal-sidebar__content" >

          <div class="row--spacer">
            <h2>Zoekfilter</h2>

          {{!-- <div class="form__row form__row--large">
            <h3>Geselecteerde filters (2)</h3>
            {{render "@form-selectedfilter" selectedfilterContext }}
          </div> --}}

          <form id="formid">
            <div class="form__row form__row--large hidden-desktop">
              <label for="">Filter op trefwoord</label>
              {{ render "@input-text" inputsearchMobContext }}
            </div>

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Domein {{render "@tooltip"}}
              </legend>
              <select>
                <option>--</option>
                <option>Advocataten</option>
                <option>Nog iets</option>
              </select>
              {{!-- {{render "@subselection" subselectionInfoContext }} --}}
            </fieldset>
          </div>

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Beslissing {{render "@tooltip"}}
              </legend>
              <select>
                <option>Kies iets</option>
                <option>Beslissing 1</option>
                <option>Beslissing 2</option>
              </select>
               {{!-- {{render "@subselection" subselectionThemaContext }} --}}
            </fieldset>
          </div>

          <div class="form__row form__row--large">
            <fieldset>
              <legend>Beroepsgroep
              {{render "@tooltip"}}
              </legend>
              <select>
                <option>Kies iets</option>
                <option>Beroepsgroep 1</option>
                <option>Beroepsgroep 2</option>
              </select>
              {{!-- {{render "@subselection" subselectionContext }} --}}
            </fieldset>
          </div>
{{!--
          <div class="form__row form__row--large">
            <fieldset>
              <legend>Datum beschikbaar {{render "@tooltip"}}</legend>
              <div class="form__row form__row--medium">
                {{render "@input-radio" onderwerpContext }}
              </div>
              <div class="form__row form__row--medium">
                <label>Startdatum</label>
                {{render "@datepicker" }}
                <a href="#" class="reset">
                  <small>Herstel</small>
                </a>
              </div>
              <div class="form__row form__row--medium">
                <label>Einddatum</label>
                {{render "@datepicker" }}
                <a href="#" class="reset">
                  <small>Herstel</small>
                </a>
              </div>
            </fieldset>
          </div> --}}

          <a href="#" class="js-fixedbottom-button__button modal-sidebar__submit button button--primary" hidden data-decorator="init-sticky" data-config='{"position":"bottom"}'>Opnieuw zoeken</a>
          </form>
        </div>


        <button type="button" data-handler="close-modalsidebar" class="modal-sidebar__close">
          <span class="visually-hidden">Sluiten</span>
        </button>

      </div>

    </div>
  </div>
</div>

</div>

{{ render "@footer" }}
