<div class="block-content">
  {{#if subheading}}
    <p class="block-content__subheading">
      <i>{{subheading}}</i>
    </p>
  {{/if}}
  <h2 class="block-content__heading">{{heading}}</h2>
  {{#if content}}
    {{{content}}}
  {{/if}}
  {{#if buttonText}}
    <p>
      <a href="{{href}}" class="button {{#if buttonModifier}}button--{{buttonModifier}}{{/if}}">{{buttonText}}</a>
      {{!-- {{render "@button" }} --}}
    </p>
  {{/if}}
</div>
