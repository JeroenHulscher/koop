{{#if topbar}}
  <div class="table__topbar">
    <ul class="table__topbar__list">
    {{#each topbar}}
      <li><a href="{{href}}" class="{{class}}">{{text}}</a></li>
    {{/each}}
    </ul>
  </div>
{{/if}}
<div class="table__container {{#if modifier}}table__container--{{modifier}}{{/if}}">
  {{#> @partial-block}}
    {{{content}}}
  {{/ @partial-block}}
</div>
