<div class="result--list">
  <ul>
    {{#each resultlist }}
    <li>
      <a href="#" class="result--title">{{title}}</a>
      {{#if showActions }}
      <ul class="result--actions">
         {{#each actions }}
          <li><a href="#" class="icon icon--download"><span>Download de</span> {{ext}} ({{size}})</a></li>
        {{/each}}
      </ul>
      {{/if}}

      {{#if description }}
        <p>{{ description }}</p>
      {{/if}}

      {{#if subdescription }}
        <p><small>{{ subdescription }}</small></p>
      {{/if}}

      {{#if showMeta }}
      <ul class="list--metadata">
         {{#each metas }}
        <li>{{text}}</li>
        {{/each}}
      </ul>
       {{/if}}
    </li>
    {{/each}}
  </ul>
</div>
