<div class="collapsible {{ modifier }}" data-decorator="init-collapsible">
  <div class="collapsible__header">
    <a href="#{{ id }}" id="{{ id }}" aria-controls="collapsible-content-{{ id }}" aria-expanded="true" data-handler="toggle-collapsible">{{ heading }}</a>
  </div>
  <div role="region" aria-labelledby="{{id}}  " class="collapsible__content" id="collapsible-content-{{ id }}">
    {{{ text }}}
  </div>
</div>
