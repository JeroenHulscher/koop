<div role="group" class="buttonswitch{{#if modifier}} buttonswitch--{{modifier}}{{/if}}">
  {{#each buttons}}
    <a href="{{#if url}}{{url}}{{else}}#{{/if}}" class="buttonswitch__button{{#if disabled}} is-disabled{{/if}}{{#if active}} is-active{{/if}}{{#if icon}} icon icon--{{icon}}{{/if}}" aria-pressed="{{#if active}}true{{else}}false{{/if}}">{{label}}</a>
  {{/each}}
</div>
