<div class="jumbotron {{ modifier }}">
  <div class="jumbotron__content {% if centered %}jumbotron__content--centered{{ size ? '-' ~ size}}{% endif %}">
    <div class="jumbotron__heading {% if headingcentered %}jumbotron__heading--centered{% endif %}">
      <p class="jumbotron__subheader">{{ subheading }}</p>
      <{{ h }} class="jumbotron__header">{{ heading }}</{{ h }}>
      {% if intro %}
      <p class="jumbotron__intro">
        {{ intro|raw }}
      </p>
      {% endif %}
    </div>
    {% if button %}
      <p>
        <a href="{{ link ?: '#'}}" class="button button--primary">{{ button }}</a>
      </p>
    {% endif %}
  {% block content %}
    {{ content }}
  {% endblock %}
  </div>
</div>
