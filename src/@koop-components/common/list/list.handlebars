<div {{#if maxItems }}data-decorator="showmoreless" data-config='{"amount": "{{maxItems}}" }'{{/if}}>
{{#if heading }}
  <{{#if headingType }}{{headingType}}{{else}}h4{{/if}} class="facet--heading">{{ heading }}</{{#if headingType }}{{headingType}}{{else}}h4{{/if}}>
{{/if }}

{{#if orderedList }}
  <ol class="list {{ modifier }}">
{{else}}
  <ul class="list {{ modifier }}">
{{/if }}
{{#if orderedList }}
  {{#each items }}
    {{#if subitems }}
    <li class="list__item">{{{ text }}}
      <ol>
      {{#each subitems }}
        <li class="list__item">{{{ text }}}</li>
      {{/each }}
      </ol>
    </li>
    {{else}}
      <li class="list__item">{{{ text }}}</li>
    {{/if }}
  {{/each }}
{{else}}
  {{#each items }}
    {{#if subitems }}
    <li class="list__item">{{{ text }}}
      {{#if orderedList }}
        <ol>
        {{#each subitems }}
          <li>{{{ text }}}</li>
        {{/each }}
        </ol>
      {{else}}
        <ul>
          {{#each subitems }}
            <li>{{{text}}}</li>
          {{/each }}
        </ul>
      {{/if }}
    </li class="list__item">
    {{else}}
      <li class="list__item">{{#if color}}<span class="{{color}}"></span>{{/if}}{{{ text }}}</li>
    {{/if }}
  {{/each }}
{{/if}}
{{#if orderedList }}
  </ol>
{{else}}
  </ul>
{{/if }}
</div>
