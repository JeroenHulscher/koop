<div {{#if maxItems }}data-decorator="showmoreless" data-config='{"amount": "{{maxItems}}" }'{{/if}}>
{{#if heading }}
  <{{#if headingType }}{{headingType}}{{else}}h4{{/if}} class="facet--heading">{{ heading }}</{{#if headingType }}{{headingType}}{{else}}h4{{/if}}>
{{/if }}

{{#if orderedList }}
  <ol class="{{#if custom}}list-custom{{else}}list{{/if}} {{ modifier }}">
{{else}}
  <ul class="{{#if custom}}list-custom{{else}}list{{/if}} {{ modifier }}">
{{/if }}
{{#if orderedList }}
  {{#each items }}
    {{#if subitems }}
    <li class="{{#if ../custom}}list-custom__item{{else}}list__item{{/if}}">{{{ content }}}
      <ol>
      {{#each subitems }}
        <li class="{{#if ../custom}}list-custom__item{{else}}list__item{{/if}}">{{{ content }}}</li>
      {{/each }}
      </ol>
    </li>
    {{else}}
      <li class="{{#if ../custom}}list-custom__item{{else}}list__item{{/if}}">{{{ content }}}</li>
    {{/if }}
  {{/each }}
{{else}}
  {{#each items }}
    {{#if subitems }}
    <li class="{{#if ../custom}}list-custom__item{{else}}list__item{{/if}}">{{{ content }}}
      {{#if orderedList }}
        <ol>
        {{#each subitems }}
          <li>{{{ content }}}</li>
        {{/each }}
        </ol>
      {{else}}
         {{#if ../custom}}<ul class="list-custom">{{else}}<ul>{{/if}}
          {{#each subitems }}
            <li>{{{content}}}</li>
          {{/each }}
        </ul>
      {{/if }}
    </li>
    {{else}}
      <li class="{{#if ../custom}}list-custom__item{{else}}list__item{{/if}}">{{#if color}}<span class="{{color}}"></span>{{/if}}{{{ content }}}</li>
    {{/if }}
  {{/each }}
{{/if}}
{{#if orderedList }}
  </ol>
{{else}}
  </ul>
{{/if }}
</div>