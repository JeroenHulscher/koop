<ul class="list--sources">
	{{#each items }}
		<li>
			<div class="list--source__information">
				{{ name }}
        <span class="list--sources__item__filesize">{{ filesize }}</span>
				{{#if files }}
					{{#each files }}
						<span class="label label--{{ type }}">{{ type}}</span>
					{{/each}}
				{{/if}}
			</div>

			{{!-- {{ render "@button" buttonContext }} --}}
      <a href="#" class="button button--primary">{{buttonContext/text}} <span class="visually-hidden">bestand: {{name}}</span></a>

			{{#if moreInfo }}
				<div class="collapsible collapsible--small" data-decorator="init-collapsible" id="c1">
				  <div class="collapsible__header">
				    <a href="#c1" aria-controls="collapsible-content-1" aria-expanded="true" data-handler="toggle-collapsible" data-text="show/hide">toon informatie</a>
				  </div>
				  <div class="collapsible__content" id="collapsible-content-1">
				  	<div>
					  	<h3>{{ title }}</h3>
					  	<div class="well well--linkContainer">{{ link }}</div>
							{{#if tableData }}
								<table>
									{{#each tableData }}
										<tr>
											<th>{{ type }}</th>
											<td data-before="{{ type }}">{{{ value }}}</td>
										</tr>
									{{/each}}
								</table>
							{{/if}}
						</div>
				  </div>
				</div>
			{{/if}}
		</li>
	{{/each}}
</ul>
