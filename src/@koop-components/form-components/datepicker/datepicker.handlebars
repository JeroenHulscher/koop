<div class="form__element">
  <label for="input--{{ id }}">{{ fieldLabel }}</label>
  {{#if fieldInstruction }}
    <small>{{ fieldInstruction }}</small>
  {{/if }}
  <div class="datepicker">
    <input type="date" class="datepicker__input" data-decorator="init-datepicker" data-config='{ "dataFormat" : "yyyyy--mm--dd" }' id="input--{{ id }}" placeholder="{{ fieldPlaceholder }}" />
  </div>
</div>
