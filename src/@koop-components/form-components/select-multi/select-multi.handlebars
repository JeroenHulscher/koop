<div class="select-multi select-multi--{{modifier}}">
  <label class="form__label form__label--{{ labelmodifier }}{{#if fieldLabelVisible}}{{else}} visually-hidden{{/if}}" for="{{id}}">{{ fieldLabel }}</label>
  <select id="{{id}}" aria-describedby="{{labelId}}" class="multipleSelect " multiple name="{{name}}" data-decorator="init-multiselect" data-decorator-placeholder="{{fieldPlaceholder}}" data-multiselect-helptext="{{helptext}}">
    {{#each categories}}
      <optgroup label="{{ title }}">
        {{#each options}}
          <option value="{{ value }}">{{ label }}</option>
        {{/each}}
      </optgroup>
    {{/each}}
  </select>
</div>
