<div class="subselection" data-decorator="init-form-subselection" data-config='{ "type": "{{type}}", "triggerOnChangeText": "{{linkTextActive}}", "maxShow": "{{maxShow}}" }'>
  <div class="subselection__summary"></div>
  <div id="modal-{{id}}" class="modal modal--off-screen modal--hidden" hidden role="alert">
    <div class="modal__inner">
      <div class="modal__content">
        <h2>{{modalTitle}}</h2>
        <p><button type="button" data-handler="close-modal" class="button button--primary">Toepassen</button></p>
        {{#if searchFilter}}
          <div class="" data-decorator="init-filter-results">
            <div class="form__row form__row--medium">
              <input type="text" aria-controls="resultfilter-{{id}}" placeholder="Typ hier uw organisatie" name="mysuper_field" id="id_mysuper_field" class="js-filterresults__input input-text input-text--searchmedium"
            />
            </div>
            <fieldset class="js-filterresults__results" role="region" id="resultfilter-{{id}}" aria-live="polite">
        {{/if}}
        {{#if selectAll}}
        <div data-decorator="init-selectall">
          <div class="input-checkbox u-margin--m">
            <input class="checkbox__input js-checkbox-master" type="checkbox" id="appel" name="selectAll" value="Alle iets" />
            <label class="checkbox__label" for="appel">
              <strong>Alle verdragen</strong>
            </label>
          </div>
        {{/if}}
              <ul class="list--unstyled">
               {{#each Options }}
                <li class=" js-filterresults__result">
                  <div class="input-checkbox">
                    <input class="checkbox__input" {{disabled}} {{checked}} type="checkbox" id="option-{{ id }}" name="name" {{ status }} value="{{ short }}"
                    />
                    <label class="checkbox__label" for="option-{{ id  }}">
                      {{ title }}
                    </label>
                  </div>
                </li>
              {{/each}}
              </ul>
        {{#if selectAll}}
         </div>
        {{/if}}
        {{#if searchFilter}}
            </fieldset>
          </div>
        {{/if}}

        <div class="modal__buttonpane">

          <button type="button" data-handler="close-modal" class="modal__close">Sluit</button>
        </div>
      </div>
    </div>
  </div>
  <a href="#" id="id123" data-handler="open-modal" data-modal="modal-{{id}}" class="subselection__trigger">{{linkText}}</a>
</div>

