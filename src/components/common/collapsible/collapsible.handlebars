<div class="collapsible" data-decorator="init-collapsible" id="{{ id }}">
  <div class="collapsible__header">
    <a href="#{{ id }}" aria-controls="collapsible-content-{{ id }}" aria-expanded="true" data-handler="toggle-collapsible">{{ heading }}</a>
  </div>
  <div class="collapsible__content" id="collapsible-content-{{ id }}">
    {{{ text }}}
  </div>
</div>
