{{#if blockLink }}
  <a href="{{ blockLink }}">
{{/if }}

  <div class="homepageblock {{ modifier }} {{ color }}" style="background-image: url({{ image }});">

    <div class="content--inner">

      <h2>{{ heading }}</h2>

      {{#if subtitle }}
        <span>{{ subtitle }}</span>
      {{/if }}

      {{#if items }}
        <ul>
          {{#each items }}
            <li><a href="#">{{{ text }}}</a></li>
          {{/each }}
        </ul>
      {{/if }}

      {{#if contextLinkText }}
        <a href="{{ contextLink }}" class="context-Link">{{ contextLinkText }}</a>
      {{/if }}

    </div>

  </div>
{{#if blockLink }}
  </a>
{{/if }}
