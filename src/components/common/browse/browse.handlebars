<div class="browse {{ modifier }}">
  {{#if title }}<h2>{{ title }}</h2>{{/if}}
  {{#if intro }}<p>{{ intro }}</p>{{/if}}
  {{#if items }}
  <ul class="browse__list">
    {{#each items }}
    <li><a href="{{ link }}">{{ text }}{{#if count }}<span class="browse__count">{{ count }} <span class="visually-hidden"> {{ count_context }}</span></span>{{/if}}</a></li>
    {{/each}}
  </ul>
  {{/if}}
</div>
